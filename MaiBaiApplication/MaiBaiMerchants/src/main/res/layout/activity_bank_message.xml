<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_reg_message_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title">

        <ImageButton
            android:id="@+id/ib_return_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:background="@color/transparent"
            android:src="@mipmap/ok_next"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@color/common_white"
            android:text="@string/verification_code" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_reg_message_title"
        android:background="#40777777">

        <TextView
            android:id="@+id/tv_phone_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="@color/color_4"/>

        <View
            android:id="@+id/v_interval"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/tv_phone_tip"/>

        <com.maibei.merchants.view.BankCardEditText
            android:id="@+id/et_bank_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@id/v_interval"
            app:hint="请输入验证码"
            app:inputType="number"
            app:maxLength="6"
            app:promp="验证码"
            app:rt_text="验证码"/>

        <RelativeLayout
            android:id="@+id/rl_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/et_bank_num">
            <CheckBox
                android:id="@+id/cb_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="已阅读并同意"
                android:textSize="30px"
                android:paddingLeft="10dp"
                android:button="@drawable/checkbox_color"
                android:checked="true"/>
            <TextView
                android:id="@+id/tv_agree"
                android:layout_toRightOf="@id/cb_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《分期业务合作协议及平台服务协议》"
                android:textSize="30px"
                android:textColor="@color/shallow_blue"/>
        </RelativeLayout>

        <View
            android:id="@+id/v_interval_one"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/rl_control"/>

        <Button
            android:id="@+id/bt_over"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_below="@id/v_interval_one"
            android:background="@drawable/button_captcha_select"
            android:enabled="false"/>

    </RelativeLayout>

</RelativeLayout>