<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_reg_shop_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title">

        <ImageButton
            android:id="@+id/ib_return_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:background="@color/transparent"
            android:src="@mipmap/ok_next"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@color/common_white"
            android:text="@string/auth_maibei" />

    </RelativeLayout>

    <View
        android:id="@+id/v_interval"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/rl_reg_shop_title"
        android:background="#40777777" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/v_interval">

        <RelativeLayout
            android:id="@+id/rl_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_reg_flow"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/resgiter_one"/>

        </RelativeLayout>

        <View
            android:id="@+id/v_interval_one"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@id/rl_flow"
            android:background="#40777777" />

        <LinearLayout
            android:id="@+id/rl_shop_info"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_interval_one">

            <com.maibei.merchants.view.MyEditText
                android:id="@+id/et_owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:hint="请输入店主姓名"
                app:promp="店主姓名" />

            <com.maibei.merchants.view.MyEditText
                android:id="@+id/et_owner_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@id/et_owner_name"
                app:hint="请输入店主身份证号码"
                app:maxLength="18"
                app:promp="身份证号" />

            <com.maibei.merchants.view.ImageTextView
                android:id="@+id/itv_operat_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@id/et_owner_id"
                app:itvTitle="经营时间"
                app:itvLtWidth="30dp"
                app:itvRtDrawable="@mipmap/icon_my_next"/>

            <com.maibei.merchants.view.ImageTextView
                android:id="@+id/itv_month_sales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@id/itv_operat_time"
                app:itvTitle="月销售额"
                app:itvLtWidth="30dp"
                app:itvRtDrawable="@mipmap/icon_my_next"/>

            <com.maibei.merchants.view.ImageTextView
                android:id="@+id/itv_shop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@id/itv_month_sales"
                app:itvTitle="店的地址"
                app:itvRtDrawable="@mipmap/icon_my_next"
                />
            <com.maibei.merchants.view.MyEditText
                android:id="@+id/et_detailed_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@id/et_owner_name"
                app:hint="请输入街道路及门牌号"
                app:left_width="60dp"
                />
        </LinearLayout>

        <View
            android:id="@+id/v_interval_two"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@id/rl_shop_info"
            android:background="#40777777"/>

        <RelativeLayout
            android:id="@+id/rl_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_interval_two"
            android:background="#40777777">

            <View
                android:id="@+id/v_interval_three"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:id="@+id/rl_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/v_interval_three">
                <Button
                    android:id="@+id/bt_next_reg"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="25dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/button_next_select"
                    android:enabled="false"
                    android:text="下一步"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>