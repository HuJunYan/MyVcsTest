<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_home_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title">
        <ImageButton
            android:id="@+id/iv_review_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:background="@color/transparent"
            android:src="@mipmap/home_erweima"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@color/common_white"
            android:text="@string/maibei_merchants" />
        <ImageView
            android:id="@+id/iv_review_menu"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="3dp"
            android:background="@mipmap/shops_home_plus"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_auth"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/rl_home_title"
        android:background="@color/common_white">

        <View
            android:id="@+id/v_amount"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="10dp"/>

        <ImageView
            android:id="@+id/tv_amount"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/loading_audit"
            android:layout_below="@id/v_amount"/>

        <View
            android:id="@+id/v_count"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/tv_amount" />

        <TextView
            android:id="@+id/tv_myamount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/v_count"
            android:text="@string/in_review"
            android:textColor="@color/color_5"
            android:textSize="10dp"/>

        <View
            android:id="@+id/v_yuan"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/tv_myamount_text" />

        <Button
            android:id="@+id/bt_review"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/v_yuan"
            android:background="@mipmap/bt_refresh"/>


    </RelativeLayout>

    <View
        android:id="@+id/v_order"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/rl_auth"
        android:background="#40777777" />

</RelativeLayout>