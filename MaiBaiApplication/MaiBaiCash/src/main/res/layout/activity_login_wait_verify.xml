<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screen_bg"
    tools:context=".activity.WaitVerifyWithdrawalActivity">

    <com.maibai.cash.view.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tbImage="@drawable/icon_houtui"
        app:tbText="等待审核" />

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:src="@drawable/loading_audit" />
    <!--未通过原因-->
    <TextView
        android:id="@+id/tv_reason"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="您的审核未通过" />
    <!--估值-->
    <TextView
        android:id="@+id/tv_valuation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--如果status状态为2-待审核, 则有下面的待审核详情信息-->
    <!--实付金额/申请提升额度-->
    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--消费时间/申请日期-->
    <TextView
        android:id="@+id/tv_add_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--"消费类型-->
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--如果type类型不为3-提升额度，则有如下的信息-->
    <!--商户名称-->
    <TextView
        android:id="@+id/tv_merchant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--消费金额-->
    <TextView
        android:id="@+id/tv_consume_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--优惠金额（商家优惠金额+平台优惠金额）-->
    <TextView
        android:id="@+id/tv_reduce_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--repayment_time-->
    <TextView
        android:id="@+id/tv_repayment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/select_bt"
        android:text="好的"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
