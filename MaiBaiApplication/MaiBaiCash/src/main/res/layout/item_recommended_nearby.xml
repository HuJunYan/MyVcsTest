<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="12dp">

    <ImageView
        android:id="@+id/iv_item_shop_img"
        android:layout_width="216px"
        android:layout_height="172px"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:background="@mipmap/loading_img"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/ll_right_view"
            android:orientation="vertical"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/tv_item_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维多利亚鱼港"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_item_icon_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_item_shop_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="在线支付满30减5元"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_shop_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5km"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_item_shop_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_bg_red"
                android:padding="3dp"
                android:text="凭信用付款"
                android:textColor="@color/dark_red" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
