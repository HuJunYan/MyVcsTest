<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/tv_take_a_picture"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/Taking_pictures"
        android:textColor="#999999"
        android:textSize="@dimen/default_font_normalsize_20dp" />

    <View
        android:id="@+id/tv_upload_experience_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/tv_take_a_picture"
        android:layout_centerInParent="true"
        android:background="#6c6c6c" />

    <TextView
        android:id="@+id/tv_get_picture_from_photo"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/tv_upload_experience_line"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/Choose_from_album"
        android:textColor="#999999"
        android:textSize="@dimen/default_font_normalsize_20dp" />

</RelativeLayout>