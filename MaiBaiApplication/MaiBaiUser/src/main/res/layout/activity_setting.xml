<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.maibai.user.activity.SettingActivity"
    android:background="@color/shadow_color">
<com.maibai.user.view.TitleBar
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:tbImage="@mipmap/icon_houtui"
    app:tbText="设置"
    ></com.maibai.user.view.TitleBar>
<com.maibai.user.view.MyTextView
    android:id="@+id/my_tv_changepassword"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:setting_tv_content="修改密码"
    app:setting_img_right="@mipmap/icon_my_next"
    app:setting_tv_size="15"
    app:setting_layout_father_height="100"
    ></com.maibai.user.view.MyTextView>


    <Button
        android:id="@+id/bt_unregist"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/select_bt"
        android:text="退出登录"
        android:textColor="@color/white"
        />
</LinearLayout>
