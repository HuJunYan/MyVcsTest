<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_zero_code"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/dark_gray">

            <TextView
                android:id="@+id/tv_home_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/ic_sao"
                android:gravity="center_horizontal"
                android:text="    凭信用付款    "
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/ll_zero_quota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:id="@+id/tv_balance_quota_before"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="￥"
                       android:textColor="#FF7D7D7D"
                       android:textSize="20dp" />
                   <TextView
                       android:id="@+id/tv_balance_quota"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="10000"
                       android:textColor="#FF7D7D7D"
                       android:textSize="30dp"
                       android:textStyle="bold"/>
                   <TextView
                       android:id="@+id/tv_balance_quota_after"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="元"
                       android:textColor="#FF7D7D7D"
                       android:textSize="20dp" />
               </LinearLayout>


                <TextView
                    android:id="@+id/tv_my_quota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="登录"
                    android:textColor="@color/shallow_blue" />
            </LinearLayout>
        </RelativeLayout>

        <com.maibai.user.view.MyGridView
            android:id="@+id/gv_merchant_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:horizontalSpacing="3dp"
            android:numColumns="4"
            android:overScrollMode="never"

            android:paddingTop="10dp"
            android:scrollbars="none"
            android:verticalSpacing="10dp" />


        <TextView
            android:id="@+id/tv_zero_recommended_nearby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/shadow_color"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="附近商家"
            android:textColor="@color/black"
            />
</LinearLayout>