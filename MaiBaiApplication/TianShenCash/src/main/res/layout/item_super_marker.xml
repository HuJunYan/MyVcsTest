<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_super_marker_root_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/global_bg_white"
    android:paddingLeft="15dp">


    <ImageView
        android:id="@+id/iv_super_marker_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_me_tianshen_service" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/iv_super_marker_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_super_marker_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="借点钱"
            android:textColor="@color/global_txt_black1"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_super_marker_description_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="描述描述描述描述描述描述描述"
            android:textColor="@color/global_txt_black5"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_super_marker_people_count_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88888人"
                android:textColor="#FF7A46"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="已放款"
                android:textColor="@color/global_txt_black4"
                android:textSize="11dp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
