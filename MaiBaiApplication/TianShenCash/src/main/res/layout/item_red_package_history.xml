<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/global_bg_white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_item_red_package_history_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="提现"
            android:textColor="@color/global_txt_black4"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_item_red_package_history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_red_package_history_title"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="2017/06/18 16:50"
            android:textColor="#969696"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_item_red_package_history_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="60"
            android:textColor="@color/global_txt_black4"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_item_red_package_history_withdrawals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_item_red_package_history_money"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="#FF0000"
            android:textSize="12dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/global_line_bg" />


</RelativeLayout>
