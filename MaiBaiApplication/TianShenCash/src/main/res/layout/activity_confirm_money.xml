<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/global_bg_white">

        <TextView
            android:id="@+id/tv_confirm_money_back"
            style="@style/title_back_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/title_txt_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认借款" />

    </RelativeLayout>


    <View style="@style/split_line_style" />


    <View
        style="@style/split_line_style"
        android:layout_marginTop="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/global_bg_white">


        <TextView
            android:id="@+id/tv_confirm_withdrawal_key"
            style="@style/auth_center_txt_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="借款金额" />

        <TextView
            android:id="@+id/tv_confirm_withdrawal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_confirm_withdrawal_key"
            android:textSize="14dp" />

    </RelativeLayout>

    <View style="@style/split_line_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/global_bg_white">


        <TextView
            android:id="@+id/tv_confirm_time_key"
            style="@style/auth_center_txt_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="借款天数" />

        <TextView
            android:id="@+id/tv_confirm_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_confirm_time_key"
            android:textSize="14dp" />

    </RelativeLayout>

    <View style="@style/split_line_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/global_bg_white">


        <TextView
            android:id="@+id/tv_confirm_procedures_key"
            style="@style/auth_center_txt_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="手续费用" />

        <TextView
            android:id="@+id/tv_confirm_procedures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_confirm_procedures_key"
            android:textSize="14dp" />

    </RelativeLayout>

    <View style="@style/split_line_style" />

    <View
        style="@style/split_line_style"
        android:layout_marginTop="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/global_bg_white">


        <TextView
            android:id="@+id/tv_confirm_transfer_key"
            style="@style/auth_center_txt_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="到账金额" />

        <TextView
            android:id="@+id/tv_confirm_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_confirm_transfer_key"
            android:textSize="14dp" />

    </RelativeLayout>

    <View style="@style/split_line_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/global_bg_white">


        <TextView
            android:id="@+id/tv_confirm_banck_card_key"
            style="@style/auth_center_txt_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="到账银行卡" />

        <TextView
            android:id="@+id/tv_confirm_banck_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_confirm_banck_card_key"
            android:textSize="14dp" />

    </RelativeLayout>

    <View style="@style/split_line_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/global_bg_white">


        <TextView
            android:id="@+id/tv_confirm_repay_key"
            style="@style/auth_center_txt_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="到期还款" />

        <TextView
            android:id="@+id/tv_confirm_repay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_confirm_repay_key"
            android:textSize="14dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_confirm_apply"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_home_button_border"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/global_txt_white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_confirm_protocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/edit_text_hint_color"
        android:textSize="14dp" />

</LinearLayout>
