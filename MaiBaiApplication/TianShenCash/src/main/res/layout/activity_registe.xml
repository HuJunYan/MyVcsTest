<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tianshen.cash.activity.LoginActivity"
    android:background="@color/login_theme_gray">
        <com.tianshen.cash.view.TitleBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:tbText="注册"
            app:tbImage="@drawable/icon_houtui"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <com.tianshen.cash.view.MyEditText
            android:layout_marginTop="20dp"
            android:id="@+id/et_mobile"
            app:maxLength="11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:promp="手机号码"
            app:hint="请输入手机号"
            app:inputType="number"
            />
        <com.tianshen.cash.view.MyEditText
            android:id="@+id/et_get_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:hint="请输入验证码"
            app:promp="验证码    "
            app:maxLength="6"
            app:rt_text="获取验证码"
            app:inputType="number"
            />
        <com.tianshen.cash.view.MyEditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:promp="设置密码"
            app:maxLength="18"
            app:hint="请设置6~18位登录密码"
            />

        <com.tianshen.cash.view.MyEditText
            android:id="@+id/et_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           app:hint="请再次输入密码"
            app:maxLength="18"
            app:promp="重复密码"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <CheckBox
            android:id="@+id/check_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读并同意"/>
        <TextView

            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户服务协议》"
            android:textColor="@color/lt_blue"/>
    </LinearLayout>

        <Button
            android:id="@+id/bt_regite"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/select_bt"
            android:clickable="false"
            android:text="确认注册"
            android:textColor="@color/white"
            />


</LinearLayout>

