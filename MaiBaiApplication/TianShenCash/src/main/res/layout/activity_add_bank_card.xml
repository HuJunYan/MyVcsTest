<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    android:orientation="vertical"
    tools:context="com.tianshen.cash.activity.AddBankCardActivity">

    <com.tianshen.cash.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tbImage="@drawable/icon_houtui"
        app:tbText="添加银行卡" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="请绑定持卡人本人的银行卡"
        android:textColor="@color/light_gray" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray" />

    <com.tianshen.cash.view.MyEditText
        android:id="@+id/et_cardholder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:hint="请输入持卡人姓名"
        app:left_width="75dp"
        app:line_margin="16dp"
        app:promp="持卡人" />

    <com.tianshen.cash.view.MyEditText
        android:id="@+id/et_bank_card_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:hint="请输入银行卡号"
        app:left_width="75dp"
        app:line_margin="16dp"
        app:promp="卡号"
        app:maxLength="23"
        />

    <RelativeLayout
        android:id="@+id/rl_bank_card_type"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_card_type_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡类型"
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_card_type_value"
            android:layout_toRightOf="@id/tv_card_type_key"
            android:text="请选择卡类型"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_my_next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray" />
    <com.tianshen.cash.view.MyEditText
        android:id="@+id/et_reserved_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:hint="请输入银行预留手机号"
        app:left_width="75dp"
        app:line_margin="16dp"
        app:promp="预留手机号"
        app:maxLength="11"
        app:inputType="number"/>

    <com.tianshen.cash.view.MyEditText
        android:id="@+id/et_verification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:hint="请输入验证码"
        app:left_width="75dp"
        app:promp="短信验证码"
        app:rt_text="获取验证码"
        app:inputType="number"
        android:visibility="gone"/>

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/select_bt"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
