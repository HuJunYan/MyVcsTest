<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/global_bg_gray"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/global_bg_white">

        <TextView
            android:id="@+id/tv_auth_info_back"
            style="@style/title_back_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/title_txt_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息" />



    </RelativeLayout>

    <include layout="@layout/layout_global_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View style="@style/split_line_style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:background="@color/global_bg_white">

                <View style="@style/split_line_style"/>

                <TextView
                    android:id="@+id/tv_auth_info_qq"
                    style="@style/auth_center_txt_style"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="为保证通过认证，请填写真实信息"
                    android:textSize="@dimen/sp_12"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/global_bg_white">

                <View style="@style/split_line_style"/>

                <TextView
                    android:id="@+id/tv_auth_info_home_address_key_no"
                    style="@style/auth_center_txt_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="常住地址"/>

                <TextView
                    android:id="@+id/tv_auth_info_home_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_auth_info_home_address_key_no"
                    android:hint="省--市--区"
                    android:textColor="@color/global_txt_black4"
                    android:textColorHint="@color/auth_bank_texthint_color"
                    android:textSize="14dp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_arraw_right2"/>

            </RelativeLayout>

            <View style="@style/split_line_style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/global_bg_white">


                <TextView
                    android:id="@+id/tv_auth_info_address_empty"
                    style="@style/auth_center_txt_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/et_auth_info_address_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_auth_info_address_empty"
                    android:background="@null"
                    android:hint="请输入街道路及门牌号"
                    android:maxLength="120"
                    android:textColorHint="@color/auth_bank_texthint_color"
                    android:textSize="14dp"/>

            </RelativeLayout>

            <View style="@style/split_line_style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@color/global_bg_white">

                <View style="@style/split_line_style"/>

                <TextView
                    android:id="@+id/tv_auth_info_work_name_no"
                    style="@style/auth_center_txt_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="单位名称"/>

                <EditText
                    android:id="@+id/et_auth_info_work_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_auth_info_work_name_no"
                    android:background="@null"
                    android:hint="请输入您的单位名称"
                    android:maxLength="100"
                    android:textColorHint="@color/auth_bank_texthint_color"
                    android:textSize="14dp"/>

            </RelativeLayout>

            <View style="@style/split_line_style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/global_bg_white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_auth_info_position"
                    style="@style/auth_center_txt_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="职&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;位"/>

                <EditText
                    android:id="@+id/ev_auth_info_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_auth_info_position"
                    android:background="@null"
                    android:hint="请输入您的职位信息"
                    android:maxLength="100"
                    android:textSize="14dp"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/global_bg_white"
                android:visibility="gone">

                <View style="@style/split_line_style"/>

                <TextView
                    android:id="@+id/tv_auth_info_occupation_key"
                    style="@style/auth_center_txt_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="职业身份"/>

                <TextView
                    android:id="@+id/tv_auth_info_occupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_auth_info_occupation_key"
                    android:hint="请选择您的职业身份"
                    android:textSize="14dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_arraw_right2"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/global_bg_white"
                android:visibility="gone">

                <View style="@style/split_line_style"/>

                <TextView
                    android:id="@+id/tv_auth_info_income_key"
                    style="@style/auth_center_txt_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="月均收入"/>

                <TextView
                    android:id="@+id/tv_auth_info_income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_auth_info_income_key"
                    android:hint="请选择您的月均收入"
                    android:textSize="14dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_arraw_right2"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/global_bg_white">

                <TextView
                    android:id="@+id/tv_auth_info_work_num_no"
                    style="@style/auth_center_txt_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="单位电话"/>

                <EditText
                    android:id="@+id/et_auth_info_work_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_auth_info_work_num_no"
                    android:background="@null"
                    android:hint="请输入您的单位电话"
                    android:inputType="phone"
                    android:maxLength="12"
                    android:textColorHint="@color/auth_bank_texthint_color"
                    android:textSize="14dp"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/global_bg_white">

                <View style="@style/split_line_style"/>

                <TextView
                    android:id="@+id/tv_auth_info_work_address_key_no"
                    style="@style/auth_center_txt_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="单位地址"/>

                <TextView
                    android:id="@+id/tv_auth_info_work_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_auth_info_work_address_key_no"
                    android:hint="省--市--区"
                    android:textColor="@color/global_txt_black4"
                    android:textColorHint="@color/auth_bank_texthint_color"
                    android:textSize="14dp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_arraw_right2"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/global_bg_white">

                <View style="@style/split_line_style"/>

                <TextView
                    android:id="@+id/tv_auth_info_work_address_empty"
                    style="@style/auth_center_txt_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"/>

                <EditText
                    android:id="@+id/et_auth_info_work_address_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_auth_info_work_address_empty"
                    android:background="@null"
                    android:hint="请输入街道路及门牌号"
                    android:maxLength="120"
                    android:textColorHint="@color/auth_bank_texthint_color"
                    android:textSize="14dp"/>

            </RelativeLayout>

            <View style="@style/split_line_style"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@color/global_bg_white">

                <View style="@style/split_line_style"/>

                <TextView
                    android:id="@+id/tv_auth_nexus1_key_no"
                    style="@style/auth_center_txt_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="紧急联系人1"/>

                <RelativeLayout
                    android:id="@+id/rl_auth_nexus1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_auth_nexus1_key_no">

                    <TextView
                        android:id="@+id/tv_auth_nexus1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="父母"
                        android:textColor="@color/global_txt_black4"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/iv_auth_contact_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/tv_auth_nexus1"
                        android:src="@drawable/ic_arrow_down"/>

                    <ImageView
                        android:id="@+id/iv_auth_contacts1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_contacts"/>

                    <EditText
                        android:id="@+id/et_auth_nexus_name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toLeftOf="@id/iv_auth_contacts1"
                        android:layout_toRightOf="@id/iv_auth_contact_down"
                        android:background="@null"
                        android:hint="请输入姓名"
                        android:maxLength="50"
                        android:textColorHint="@color/auth_bank_texthint_color"
                        android:textSize="14dp"/>

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/global_bg_white">

                <View style="@style/split_line_style"/>

                <TextView
                    android:id="@+id/tv_auth_nexus_phone_no"
                    style="@style/auth_center_txt_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="手机号"/>

                <EditText
                    android:id="@+id/et_auth_nexus_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_auth_nexus_phone_no"
                    android:background="@null"
                    android:hint="请输入联系电话"
                    android:inputType="phone"
                    android:maxLength="18"
                    android:textColorHint="@color/auth_bank_texthint_color"
                    android:textSize="14dp"/>

            </RelativeLayout>

            <View style="@style/split_line_style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:background="@color/global_bg_white">

                <View style="@style/split_line_style"/>

                <TextView
                    android:id="@+id/tv_auth_nexus2_key_no"
                    style="@style/auth_center_txt_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="紧急联系人2"/>

                <RelativeLayout
                    android:id="@+id/rl_auth_nexus2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_auth_nexus2_key_no">

                    <TextView
                        android:id="@+id/tv_auth_nexus2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="朋友"
                        android:textColor="@color/global_txt_black4"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/iv_auth_contact_down2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="14dp"
                        android:layout_toEndOf="@+id/tv_auth_nexus2"
                        android:src="@drawable/ic_arrow_down"/>

                    <ImageView
                        android:id="@+id/iv_auth_contacts2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_contacts"/>

                    <EditText
                        android:id="@+id/et_auth_nexus_name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toLeftOf="@id/iv_auth_contacts2"
                        android:layout_toRightOf="@id/iv_auth_contact_down2"
                        android:background="@null"
                        android:hint="请输入姓名"
                        android:maxLength="50"
                        android:textColorHint="@color/auth_bank_texthint_color"
                        android:textSize="14dp"/>


                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/global_bg_white">

                <View style="@style/split_line_style"/>

                <TextView
                    android:id="@+id/tv_auth_nexus_phone2_no"
                    style="@style/auth_center_txt_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="手机号"/>

                <EditText
                    android:id="@+id/et_auth_nexus_phone2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_auth_nexus_phone2_no"
                    android:background="@null"
                    android:hint="请输入联系电话"
                    android:inputType="phone"
                    android:maxLength="18"
                    android:textColorHint="@color/auth_bank_texthint_color"
                    android:textSize="14dp"/>

            </RelativeLayout>

            <View style="@style/split_line_style"/>

            <TextView
                android:id="@+id/tv_auth_info_post"
                style="@style/auth_center_title_post_txt_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
