                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_auth_nexus1_key">

                    <TextView
                        android:id="@+id/tv_auth_nexus1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="父母"
                        android:textColor="@color/global_txt_black4"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/iv_auth_contact_down"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/tv_auth_nexus1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_centerVertical="true"
                       />

                    <EditText
                        android:id="@+id/et_auth_nexus_name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/iv_auth_contact_down"
                        android:background="@null"
                        android:hint="请输入姓名"
                        android:textColorHint="@color/auth_bank_texthint_color"
                        android:maxLength="50"
                        android:textSize="14dp" />


                    <ImageView
                        android:id="@+id/iv_auth_contacts1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_contacts" />

                </RelativeLayout>

            </RelativeLayout>


