<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/global_bg_white">

        <TextView
            android:id="@+id/tv_risk_pre_back"
            style="@style/title_back_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_auth_bank_card_title"
            style="@style/title_txt_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_risk_pre_auth_identity" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_scan_identity_front"

                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_identity_auth_pic" />

            <ImageView
                android:id="@+id/iv_scan_identity_back"

                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_identity_auth_pic2" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
