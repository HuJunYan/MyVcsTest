<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/screen_bg">
<com.tianshen.cash.view.TitleBar
    android:id="@+id/tb_title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:tbText="审核结果"
    app:tbImage="@drawable/icon_houtui"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/audiit_failure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:text="抱歉！审核失败"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_green"/>
    <TextView
        android:id="@+id/tv_reason"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:text="您不符合我们的征信条件"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pay_background"/>
    <Button
        android:id="@+id/bt_confirm"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/select_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="@color/white"/>
</LinearLayout>
