<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/global_bg_white">

        <TextView
            android:id="@+id/tv_confirm_money_back"
            style="@style/title_back_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/title_txt_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认银行卡" />

    </RelativeLayout>

    <View style="@style/split_line_style" />

    <View
        style="@style/split_line_style"
        android:layout_marginTop="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/global_bg_white">


        <TextView
            android:id="@+id/tv_confirm_bank_card_user_key"
            style="@style/auth_center_txt_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="持卡人" />

        <TextView
            android:id="@+id/tv_confirm_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_confirm_bank_card_user_key"
            android:text="XXX"
            android:textColor="@color/global_txt_black4"
            android:textSize="14dp" />

    </RelativeLayout>

    <View style="@style/split_line_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/global_bg_white">

        <TextView
            android:id="@+id/tv_confirm_bank_name_key"
            style="@style/auth_center_txt_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="账户银行" />

        <TextView
            android:id="@+id/tv_confirm_bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_confirm_bank_name_key"
            android:text="XX银行"
            android:textColor="@color/global_txt_black4"
            android:textSize="14dp" />

    </RelativeLayout>

    <View style="@style/split_line_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/global_bg_white">

        <TextView
            android:id="@+id/tv_confirm_bank_card_num_key"
            style="@style/auth_center_txt_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="银行卡号" />

        <TextView
            android:id="@+id/tv_confirm_bank_card_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_confirm_bank_card_num_key"
            android:text="0000000000000000"
            android:textColor="@color/global_txt_black4"
            android:textSize="14dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/global_bg_white">

        <TextView
            android:id="@+id/tv_confirm_phone_key"
            style="@style/auth_center_txt_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="手机号" />

        <TextView
            android:id="@+id/tv_confirm_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_confirm_phone_key"
            android:text="13800000000"
            android:textColor="@color/global_txt_black4"
            android:textSize="14dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/global_bg_white">

        <View style="@style/split_line_style" />

        <TextView
            android:id="@+id/tv_confirm_severity_code_key"
            style="@style/auth_center_txt_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="验证码" />

        <EditText
            android:id="@+id/et_severity_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_confirm_severity_code_key"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tv_confirm_severity_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="获取验证码"
            android:textColor="#fe9900"
            android:textSize="14sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@id/tv_confirm_severity_code"
            android:background="@color/global_line_bg" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_confirm_apply"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@color/global_bg_green"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/global_txt_white"
        android:textSize="18sp" />

</LinearLayout>
